<main>
    <section class="blogpost">
        <!-- BLOG SINGLE CONTENT -->
        <article>
            <figure>
                <img src="{{image}}" alt="Blog Single Image">

                <figcaption class="do-post-format-icon">
                    <i class="fa fa-quote-right"></i>
                </figcaption>
            </figure>

            <section class="content">
                <!--  POST TITLE -->
                <section>
					<h1>{{{title}}}</h1>
					<hr>
                    <time datetime="{{{fullDate}}}">
                        <span class="do-post-date">{{day}}</span>
                        <span class="do-post-month">{{month}}</span>
                    </time>
                </section>
                <!--  POST TITLE END-->

                <!--  POST TEXT -->
                {{{content}}}
                <!-- <a href="#.com" class="do-btn-round-outline">SHARE</a> -->
                <!--  POST TEXT END -->
				<section class="author">
					<h4>Author: {{author}}</h4>
				</section>
            </section>
        </article>
        <!-- BLOG SINGLE CONTENT END -->

    </section>
</main>
